{
    // ── Spell Check ───────────────────────────────────────
    "cSpell.words": [
        "Andernet",
        "xcodebuild",
        "xcrun",
        "simctl",
        "swiftlint",
        "xcbeautify",
        "pbxproj"
    ],

    // ── Swift / Xcode ─────────────────────────────────────
    // Treat .swift files as Swift (for extensions that need it)
    "files.associations": {
        "*.swift": "swift",
        "*.pbxproj": "plaintext",
        "*.xcscheme": "xml",
        "*.xcsettings": "xml",
        "*.entitlements": "xml",
        "*.xcprivacy": "xml",
        "*.plist": "xml",
        "*.xcstrings": "json",
        "*.storyboard": "xml",
        "*.xib": "xml"
    },

    // ── Editor Settings for Swift ────────────────────────
    "[swift]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.formatOnSave": false,
        "editor.rulers": [120],
        "editor.wordWrap": "off",
        "editor.bracketPairColorization.enabled": true,
        "editor.guides.bracketPairs": "active",
        "editor.suggest.snippetsPreventQuickSuggestions": false
    },

    // ── Search / Explorer Exclusions ─────────────────────
    // Hide noisy Xcode artifacts from search & sidebar
    "files.exclude": {
        "**/.build": true,
        "**/DerivedData": true,
        "**/*.xcodeproj/xcuserdata": true,
        "**/*.xcodeproj/project.xcworkspace/xcuserdata": true,
        "**/.DS_Store": true
    },
    "search.exclude": {
        "**/.build": true,
        "**/DerivedData": true,
        "**/*.xcodeproj/project.pbxproj": true,
        "**/*.xcodeproj/xcuserdata": true,
        "**/Assets.xcassets/**/*.json": true,
        "**/.git": true
    },
    "files.watcherExclude": {
        "**/.build/**": true,
        "**/DerivedData/**": true,
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true
    },

    // ── Terminal ──────────────────────────────────────────
    "terminal.integrated.defaultProfile.osx": "zsh",
    "terminal.integrated.env.osx": {
        "DEVELOPER_DIR": "/Applications/Xcode.app/Contents/Developer"
    },
    // Increase terminal scrollback for verbose xcodebuild output
    "terminal.integrated.scrollback": 10000,

    // ── Problem Matchers ─────────────────────────────────
    // Swift errors in the Problems panel
    "task.problemMatchers.neverPrompt": {
        "xcodebuild": true,
        "swiftlint": true
    }
}