# EditorConfig â€” consistent coding style across editors
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.swift]
indent_size = 4

[*.{json,yml,yaml}]
indent_size = 2

[*.{plist,xcscheme,xcworkspacedata,xcsettings,xcprivacy,entitlements}]
indent_style = tab
indent_size = 4

[Makefile]
indent_style = tab

[*.md]
trim_trailing_whitespace = false
